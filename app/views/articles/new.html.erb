<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@article) do |f| %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>

 	<h4>今日の天気</h4>
    <%= f.text_field :weather %>

    <%= f.submit '投稿'%>
  
<% end %>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">title</div>
		<div class="col-md-4">body</div>
		<div class="col-md-4">weather</div>
	</div>
</div>
