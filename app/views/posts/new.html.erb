
<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@post) do |f| %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
 
    <%= f.submit '投稿' %>
 
<% end %>


<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">:title</div>
		<div class="col-md-4">body</div>
		<div class="col-md-4">カラムＣ</div>
	</div>
</div>